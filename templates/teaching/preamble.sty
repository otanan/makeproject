%======================== Worksheet Functionality ========================%
\NewDocumentCommand{\includesection}{ m }{
    \setsepchar{-}
    % File name to problem sheet, provided as 1-1 to mean
    % chapter_1/1-1.tex, for problems on chapter 1 section 1
    \readlist\probsfname{#1}
    % Include section contents
    \input{../../problems/chapter_\probsfname[1]/\probsfname[1]-\probsfname[2]}
}


